<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Section"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <enableContainer
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        text="Enable Container"
                        required="{Boolean}false"
                        fieldDescription="If enabled, the responsive grid is placed inside a container."
                        value="container"
                        name="./enableContainer"/>
                    <backgroundColor
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                        showDefaultColors="{Boolean}false"
                        text="Background Color"
                        name="./backgroundColor">
                        <items jcr:primaryType="nt:unstructured">
                            <white jcr:primaryType="nt:unstructured" value="#FFFFFF" />
                            <black jcr:primaryType="nt:unstructured" value="#000000" />
                            <pug-brown jcr:primaryType="nt:unstructured" value="#451A0C" />
                            <pug-blue jcr:primaryType="nt:unstructured" value="#D8F1FF" />
                        </items>
                    </backgroundColor>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
